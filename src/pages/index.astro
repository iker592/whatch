---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Movie Search">
  <main class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Movie Search</h1>
    <form hx-post="/api/search" hx-target="#result" hx-indicator="#spinner">
      <input
        type="text"
        name="query"
        placeholder="Enter movie title"
        class="border p-2 rounded"
      />
      <button type="submit" class="bg-blue-500 text-white p-2 rounded ml-2">
        Search
      </button>
    </form>
    <div id="spinner" class="htmx-indicator">Searching...</div>
    <div id="result" class="mt-4"></div>
  </main>
</Layout>

<script src="https://unpkg.com/htmx.org@1.9.10"></script>